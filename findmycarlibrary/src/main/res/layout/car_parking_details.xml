<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="@dimen/marign_left"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="660dp"
        android:layout_height="600dp"
        android:layout_gravity="bottom"
        android:background="@color/colorWhite"
        android:layout_marginRight="@dimen/right_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin_overlay"
            android:textSize="@dimen/txt_size"
            android:textStyle="bold"
            android:id="@+id/your_car_txt"
            android:text="@string/your_car_is"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_txt"
            android:layout_marginTop="@dimen/top_margin_overlay"
            android:textSize="@dimen/txt_size"
            android:textStyle="bold"
            android:layout_below="@+id/your_car_txt"
            android:text="@string/parked_location"/>
         <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_right"
            android:text="save"
            android:background="@color/light_blue"
            android:layout_alignParentRight="true"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_txt"
            android:background="@android:color/transparent"
            android:id="@+id/details_btn"
            android:text="@string/details_btn_txt"/>

        <View
            android:layout_width="match_parent"
            android:layout_below="@+id/details_btn"
            android:id="@+id/view1"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/top_margin_overlay"
            android:layout_marginLeft="@dimen/marign_left"
            android:layout_below="@+id/view1"
            android:text="@string/set_timer_txt"/>

    </RelativeLayout>

</LinearLayout>